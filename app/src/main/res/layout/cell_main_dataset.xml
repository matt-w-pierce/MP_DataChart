<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Connection String: "
        android:padding="5dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:text="Connection Type: "
        android:layout_alignEnd="@+id/textView"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/connectionString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:text="CONNECTION_STRING"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/connectionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connectionString"
        android:layout_toEndOf="@+id/textView2"
        android:text="CONNECTION_TYPE"
        android:padding="5dp"/>

    <CheckBox
        android:id="@+id/dataset_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/connectionType"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contextClickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="5dp"
        android:enabled="false"/>

</RelativeLayout>